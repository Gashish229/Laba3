#include<stdio.h>
#include<string.h>
int main(void)
{
    char name[20], familia[20];
    printf("Введите имя: ");
    scanf("%s", &name);
    printf("Введите фамилию: ");
    scanf("%s", &familia);
    printf("%s %s\n", name, familia);
    printf("%*d %*d\n", strlen(name), strlen(familia));
    printf("%s %s\n", name, familia);
    printf("%-*d %-*d\n", strlen(name), strlen(familia));
    return 0;
}
