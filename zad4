#include<stdio.h>
int main(void)
{
    char name[20]; float rost_sm, rost_mt;
    printf("Введите ваше имя: ");
    scanf("%s", &name);
    printf("Введите ваш рост в см: ");
    scanf("%f", &rost_sm);
    rost_mt = rost_sm / 100;
    printf("%s, ваш рост составляет %.2f метров\n", name, rost_mt);
    return 0;
}
